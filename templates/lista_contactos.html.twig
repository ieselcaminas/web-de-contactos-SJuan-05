{% extends 'base.html.twig' %}

{% block title %}Lista de Contactos{% endblock %}

{% block body %}
    <h2>Contactos encontrados</h2>

    {% if contactos is empty %}
        <p>No se encontraron contactos.</p>
    {% else %}
        {% for contacto in contactos %}
            <div style="margin-bottom: 20px; padding: 10px; border: 1px solid #ccc; border-radius: 8px;">
                <p><strong>Nombre:</strong> {{ contacto.nombre }}</p>
                <p><strong>Tel√©fono:</strong> {{ contacto.telefono }}</p>
                <p><strong>Email:</strong> {{ contacto.email }}</p>
            </div>
        {% endfor %}
    {% endif %}
{% endblock %}
